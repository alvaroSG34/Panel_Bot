# Copiar credenciales de la base de datos del bot
# Cambiar la ruta si el proyecto del bot está en otra ubicación

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=enrollment_db
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_SSL=false

# JWT Secrets
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Server
PORT=4000
NODE_ENV=development

# CORS (para desarrollo con frontend en puerto diferente)
CORS_ORIGIN=http://localhost:3000

# Bot Integration
# Ruta al archivo de logs del bot WhatsApp
BOT_LOGS_PATH=D:\BotWhatsapp\logs\bot.log
# Ejemplo Windows: D:/BotWhatsapp/logs/bot.log
# Ejemplo Linux: /root/BotWhatsapp/logs/bot.log
BOT_LOGS_PATH=../BotWhatsapp/logs/bot.log

# OCR Configuration (para testing con OCR real)
OPENAI_API_KEY=your_openai_api_key_here
OCR_SPACE_API_KEY=your_ocr_space_api_key_here
